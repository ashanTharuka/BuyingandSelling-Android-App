<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/trademe"

                />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo"
                android:layout_centerHorizontal="true"
                android:fontFamily="casual"
                android:text="Manage User"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold|normal" />

            <TextView
                android:id="@+id/typetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView7"
                android:layout_marginTop="28dp"
                android:layout_toStartOf="@+id/logo"
                android:text="user Id" />

            <EditText
                android:id="@+id/xuseridtext"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/typetext"
                android:layout_below="@+id/typetext"
                android:background="@color/lightblue"
                android:ems="10"
                android:focusable="false"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/brandtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/xuseridtext"
                android:layout_below="@+id/xuseridtext"
                android:layout_marginTop="20dp"
                android:text="First Name" />

            <EditText
                android:id="@+id/xfirstnametext"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/brandtext"
                android:layout_below="@+id/brandtext"
                android:ems="10"
                android:inputType="textImeMultiLine|textPersonName" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/firstnametext"
                android:layout_below="@+id/firstnametext"
                android:layout_marginTop="20dp"
                android:text="Last Name" />


            <EditText
                android:id="@+id/xlastnametext"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/firstnametext"
                android:layout_below="@+id/firstnametext"
                android:ems="10"
                android:inputType="textImeMultiLine|textPersonName" />

            <TextView
                android:id="@+id/pricetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/lastnametext"
                android:layout_below="@+id/lastnametext"
                android:layout_marginTop="25dp"
                android:text="Phone Number" />

            <EditText
                android:id="@+id/xphonenumbertext"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_alignStart="@+id/pricetext"
                android:layout_below="@+id/pricetext"
                android:ems="10"
                android:inputType="number" />


            <Button
                android:id="@+id/mviewallcus"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/viewall"
                android:text="View All"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/manageuserback"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                app:srcCompat="@drawable/back" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>