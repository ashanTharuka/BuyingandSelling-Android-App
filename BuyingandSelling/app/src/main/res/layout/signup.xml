<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/logoutbtn"
                app:srcCompat="@drawable/trademe" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_above="@+id/imageView"
                android:layout_marginBottom="6dp"
                android:fontFamily="casual"
                android:padding="8dp"
                android:text="Sign Up"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold|normal" />
            <TextView
                android:id="@+id/locationview"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/textView6"
                android:layout_marginBottom="6dp"
                android:padding="8dp"
                android:text="Sample Location"
                android:textColor="@color/gray"
                android:textSize="20sp" />

            <Button
                android:id="@+id/locationbtn"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_below="@+id/locationview"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custombtn3"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:text="Select Location"
                />

    <TextView
        android:id="@+id/firstnamelabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="13dp"

        android:text="First Name" />

    <EditText
        android:id="@+id/firstname"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/firstnamelabel"
        android:layout_below="@+id/firstnamelabel"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/femailtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/firstname"
        android:layout_below="@+id/firstname"
        android:layout_marginTop="22dp"
        android:text="Last Name" />

    <EditText
        android:id="@+id/lastname"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/femailtext"
        android:layout_below="@+id/femailtext"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/phonenumberlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lastname"
        android:layout_below="@+id/lastname"
        android:layout_marginTop="22dp"
        android:text="PhoneNumber" />

    <EditText
        android:id="@+id/phonenumber"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/phonenumberlabel"
        android:layout_below="@+id/phonenumberlabel"
        android:ems="10"
        android:inputType="number" />



    <TextView
        android:id="@+id/emaillabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/phonenumber"
        android:layout_below="@+id/phonenumber"
        android:layout_marginTop="12dp"
        android:text="Email" />

    <EditText
        android:id="@+id/email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/emaillabel"
        android:layout_below="@+id/emaillabel"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/passwordlable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/email"
        android:layout_below="@+id/email"
        android:layout_marginTop="16dp"
        android:text="password" />

    <EditText
        android:id="@+id/regpassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/passwordlable"
        android:layout_below="@+id/passwordlable"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/registerbt"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/regpassword"

        android:layout_marginLeft="28dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/registerbtn"
        android:gravity="center"
        android:text="REGISTER"
        android:textColor="@color/white" />



    <ImageButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@color/white"
        app:srcCompat="@drawable/back" />

    </LinearLayout>


    </ScrollView>
</RelativeLayout>