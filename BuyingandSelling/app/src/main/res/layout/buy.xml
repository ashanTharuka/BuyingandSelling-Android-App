<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/trademe"

                />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo"
                android:layout_centerHorizontal="true"
                android:text="BUY PRODUCTS"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="bold|normal" />

            <TextView
                android:id="@+id/typetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView7"
                android:layout_marginTop="28dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:layout_toStartOf="@+id/logo"
                android:text="sample type" />
            <Button
                android:id="@+id/typebtn"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_below="@+id/newpassword"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/typetext"
                android:background="@drawable/custombtn3"
                android:text="select Main Category"
                 />

            <TextView
                android:id="@+id/brandtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/typebtn"
                android:layout_below="@+id/typebtn"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:text="sample brand" />

            <Button
                android:id="@+id/brandbtn"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_below="@+id/brandtext"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/brandtext"
                android:background="@drawable/custombtn3"
                android:text="select brand"
                 />

            <TextView
                android:id="@+id/modeltext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/brandbtn"
                android:layout_below="@+id/brandbtn"
                android:layout_marginTop="20dp"
                android:text="sample model"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"/>
            <Button
                android:id="@+id/modelbtn"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_below="@+id/brandtext"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/brandtext"
                android:background="@drawable/custombtn3"
                android:text="select model"
                />

            <TextView
                android:id="@+id/pricetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/modelbtn"
                android:layout_below="@+id/modelbtn"
                android:layout_marginTop="25dp"
                android:text="Rs : 5000"
                android:textColor="@color/red"
                android:textStyle="bold|normal"
                android:textSize="25sp"/>

            <Button
                android:id="@+id/buyyyybtn"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_below="@+id/newpassword"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="38dp"
                android:layout_toEndOf="@+id/typetext"
                android:background="@drawable/viewall"
                android:text="BUY"
                android:textColor="@color/white" />
            <ImageView
                android:id="@+id/buyback"
                android:layout_width="50dp"
                android:layout_gravity="right"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/back" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>