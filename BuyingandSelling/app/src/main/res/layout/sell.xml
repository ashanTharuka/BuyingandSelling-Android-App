<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/trademe"

                />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo"
                android:layout_centerHorizontal="true"
                android:text="SELL PRODUCTS"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="bold|normal" />

            <TextView
                android:id="@+id/itypetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView7"
                android:layout_marginTop="28dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:layout_toStartOf="@+id/logo"
                android:text="sample type" />
            <Button
                android:id="@+id/itypebtn"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_below="@+id/newpassword"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/typetext"
                android:background="@drawable/custombtn3"
                android:text="select Main Category"
                />

            <TextView
                android:id="@+id/branasddtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/itypebtn"
                android:layout_below="@+id/itypebtn"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:text="sample brand" />

            <Button
                android:id="@+id/ibrandbtn"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_below="@+id/brandtext"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/brandtext"
                android:background="@drawable/custombtn3"
                android:text="select brand"
                />
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/brandbtn"
                android:layout_toEndOf="@+id/brandbtn"
                android:text="Model Name"
                android:textColor="@color/gray"
                android:textSize="17sp"/>


            <EditText
                android:id="@+id/modellnametext"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="26dp"
                android:ems="10"
                android:inputType="textPersonName" />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/modelnametext"
                android:layout_toEndOf="@+id/modelnametext"
                android:textColor="@color/gray"
                android:textSize="17sp"
                android:text="Price" />
            <EditText
                android:id="@+id/priicetext"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:inputType="number" />

            <Button
                android:id="@+id/buybtnxx"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_below="@+id/newpassword"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="38dp"
                android:layout_toEndOf="@+id/typetext"
                android:background="@drawable/viewall"
                android:text="SELL"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/sellback"
                android:layout_width="50dp"
                android:layout_gravity="right"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/back" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>