<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/trademe"

                />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo"
                android:layout_centerHorizontal="true"
                android:fontFamily="casual"
                android:text="Admin Profile"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold|normal" />

            <TextView
                android:id="@+id/typetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView7"
                android:layout_marginTop="28dp"
                android:layout_toStartOf="@+id/logo"
                android:text="Admin Id" />

            <EditText
                android:id="@+id/auseridtext"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/typetext"
                android:layout_below="@+id/typetext"
                android:background="@color/lightblue"
                android:ems="10"
                android:focusable="false"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/brandtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/auseridtext"
                android:layout_below="@+id/auseridtext"
                android:layout_marginTop="20dp"
                android:text="Admin Name" />

            <EditText
                android:id="@+id/afirstnametext"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/brandtext"
                android:layout_below="@+id/brandtext"
                android:ems="10"
                android:inputType="textImeMultiLine|textPersonName" />

            <TextView
                android:id="@+id/v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/afirstnametext"
                android:layout_below="@+id/afirstnametext"
                android:layout_marginTop="25dp"
                android:text="Email" />

            <EditText
                android:id="@+id/afemailtext"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/emaillabel"
                android:layout_below="@+id/emaillabel"
                android:ems="10"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/femailtext"
                android:layout_marginTop="22dp"
                android:layout_toStartOf="@+id/textView7"
                android:text="Currunt Password" />

            <EditText
                android:id="@+id/aregpassword"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView2"
                android:layout_below="@+id/textView2"
                android:ems="10"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/femailtext"
                android:layout_below="@+id/regpassword"
                android:layout_marginTop="21dp"
                android:text="New Password" />

            <EditText
                android:id="@+id/anewpassword"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/regpassword"
                android:layout_below="@+id/textView8"
                android:ems="10"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/aupdateadminbtn"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_below="@+id/anewpassword"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="38dp"
                android:layout_toEndOf="@+id/typetext"
                android:background="@drawable/update"
                android:text="update"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/adminprofileback"
                android:layout_width="50dp"
                android:layout_gravity="right"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/back" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>